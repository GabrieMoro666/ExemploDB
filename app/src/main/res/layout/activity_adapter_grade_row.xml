<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    tools:context=".adapterGrade.adapterGrade.AdapterGrade">

    <TextView
        android:id="@+id/textViewPaisLinha"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textViewEstadoLinha"
        android:layout_toEndOf="@+id/checkBoxCheck" />

    <TextView
        android:id="@+id/textViewEstadoLinha"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <CheckBox
        android:id="@+id/checkBoxCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp" />
</RelativeLayout>